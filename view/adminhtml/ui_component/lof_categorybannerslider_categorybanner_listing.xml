<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">lof_categorybannerslider_categorybanner_listing.lof_categorybannerslider_categorybanner_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>lof_categorybannerslider_categorybanner_columns</spinner>
        <deps>
            <dep>lof_categorybannerslider_categorybanner_listing.lof_categorybannerslider_categorybanner_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource component="Magento_Ui/js/grid/provider" name="lof_categorybannerslider_categorybanner_listing_data_source">
        <settings>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Lof_CategoryBannerSlider::CategoryBanner</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="lof_categorybannerslider_categorybanner_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>banner_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="lof_categorybannerslider_categorybanner_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>banner_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="banner_id" sortOrder="10">
            <settings>
                <filter>text</filter>
                <sorting>asc</sorting>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="priority" sortOrder="20">
            <settings>
                <filter>text</filter>
                <label translate="true">Priority</label>
            </settings>
        </column>
        <column name="title">
            <settings>
                <filter>text</filter>
                <label translate="true">Title</label>
            </settings>
        </column>
        <column name="status" sortOrder="30">
            <settings>
                <filter>text</filter>
                <label translate="true">Status</label>
            </settings>
        </column>
    </columns>
</listing>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                lof_categorybannerslider_categorybanner_form.categorybanner_form_data_source
            </item>
        </item>
        <item name="label" translate="true" xsi:type="string">Banner Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button class="Lof\CategoryBannerSlider\Block\Adminhtml\CategoryBanner\Edit\BackButton" name="back"/>
            <button class="Lof\CategoryBannerSlider\Block\Adminhtml\CategoryBanner\Edit\DeleteButton" name="delete"/>
            <button class="Lof\CategoryBannerSlider\Block\Adminhtml\CategoryBanner\Edit\SaveButton" name="save"/>
            <button class="Lof\CategoryBannerSlider\Block\Adminhtml\CategoryBanner\Edit\SaveAndContinueButton"
                    name="save_and_continue"/>
        </buttons>
        <namespace>lof_categorybannerslider_categorybanner_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>lof_categorybannerslider_categorybanner_form.categorybanner_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="categorybanner_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Lof\CategoryBannerSlider\Model\CategoryBanner\DataProvider"
                      name="categorybanner_form_data_source">
            <settings>
                <requestFieldName>banner_id</requestFieldName>
                <primaryFieldName>banner_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label>Banner Information</label>
        </settings>
        <!-- Field Status-->
        <field name="status" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <!--End Field Status-->
        <!-- Field title-->
        <field formElement="input" name="title" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">CategoryBanner</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Banner Title</label>
                <dataScope>title</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <!--End Field title-->
        <!-- Field Priority-->
        <field formElement="input" name="priority" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">CategoryBanner</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Priority</label>
                <dataScope>priority</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <!--End Field Priority-->
        <!-- Field URL On Image Click-->
        <field formElement="input" name="url_image" sortOrder="40">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">URL On Image Click</label>
                <dataScope>url_image</dataScope>
            </settings>
        </field>
        <!--End Field URL On Image Click-->
        <!-- Field storeview-->
        <field name="storeviews" formElement="multiselect" sortOrder="50">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Store View</label>
                <dataScope>store_id</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options
                                class="Lof\CategoryBannerSlider\Ui\Component\Listing\Column\CategoryBanner\StoreViewOptions"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <!--End Field storeview-->
        <!-- Field customer_group -->
        <field name="customer_group" formElement="multiselect" sortOrder="60">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Enabled for Customer Groups</label>
                <dataScope>customer_group_id</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options
                                class="Lof\CategoryBannerSlider\Ui\Component\Listing\Column\CategoryBanner\CustomerGroup"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <!-- End Field customer_group -->
        <!-- Field Banner Position-->
        <field name="banner_position" formElement="select" sortOrder="70">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Banner Position</label>
                <dataScope>select_example</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">1</item>
                                <item name="label" xsi:type="string">Between Products</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">2</item>
                                <item name="label" xsi:type="string">On Top</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">3</item>
                                <item name="label" xsi:type="string">On Bottom</item>
                            </option>
                        </options>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <!-- End Field Banner Position-->
        <!-- Textarea description-->
        <textarea name="description" sortOrder="80">
            <settings>
                <cols>15</cols>
                <rows>5</rows>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </textarea>
        <!-- End Textarea description-->
        <!-- Fieldset General Slider Settings-->
        <fieldset name="general_slider_settings">
            <settings>
                <collapsible>true</collapsible>
                <label translate="true">General Slider Settings</label>
            </settings>
            <!-- Field select_slider  -->
            <field name="select_slider" formElement="select" sortOrder="10">
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Select Slider</label>
                    <dataScope>select_example</dataScope>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options>
                                <option name="1" xsi:type="array">
                                    <item name="value" xsi:type="string">0</item>
                                    <item name="label" xsi:type="string">No Slider</item>
                                </option>
                                <option name="2" xsi:type="array">
                                    <item name="value" xsi:type="string">1</item>
                                    <item name="label" xsi:type="string">Simple Slider</item>
                                </option>
                                <option name="3" xsi:type="array">
                                    <item name="value" xsi:type="string">2</item>
                                    <item name="label" xsi:type="string">Camera Slider</item>
                                </option>
                            </options>
                            <caption translate="true">-- Please Select --</caption>
                        </settings>
                    </select>
                </formElements>
            </field>
            <!--End Field select_slider  -->
            <!-- Field banner_width-->
            <field formElement="input" name="banner_width" sortOrder="20">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">CategoryBanner</item>
                    </item>
                </argument>
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Banner Width</label>
                    <dataScope>banner_width</dataScope>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
            </field>
            <!--End Field banner_width-->
            <!-- Field banner_height-->
            <field formElement="input" name="banner_height" sortOrder="30">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">CategoryBanner</item>
                    </item>
                </argument>
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Banner Height</label>
                    <dataScope>banner_height</dataScope>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                        <rule name="validate-number" xsi:type="boolean">true</rule>
                    </validation>
                </settings>
            </field>
            <!--End Field banner_height-->
            <!-- Field Show Banner Content-->
            <field name="show_banner_content" sortOrder="40" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">page</item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
                <settings>
                    <dataType>boolean</dataType>
                    <label translate="true">Show Banner Content</label>
                    <dataScope>show_banner_content</dataScope>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="number">0</map>
                                <map name="true" xsi:type="number">1</map>
                            </valueMap>
                            <prefer>toggle</prefer>
                        </settings>
                    </checkbox>
                </formElements>
            </field>
            <!-- End Field Show Banner Content-->
            <!-- Field Show Banner Title-->
            <field name="show_banner_title" sortOrder="50" formElement="checkbox">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="source" xsi:type="string">page</item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
                <settings>
                    <dataType>boolean</dataType>
                    <label translate="true">Show Banner Title</label>
                    <dataScope>show_banner_title</dataScope>
                </settings>
                <formElements>
                    <checkbox>
                        <settings>
                            <valueMap>
                                <map name="false" xsi:type="number">0</map>
                                <map name="true" xsi:type="number">1</map>
                            </valueMap>
                            <prefer>toggle</prefer>
                        </settings>
                    </checkbox>
                </formElements>
            </field>
            <!-- End Field Show Banner Title-->
        </fieldset>
        <!-- End Fieldset  General Slider Settings -->
        <!-- Fieldset images -->
        <htmlContent name="gallery" sortOrder="100">
            <argument name="data" xsi:type="array">
                <item name="wrapper" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Images</item>
                    <item name="collapsible" xsi:type="boolean">true</item>
                    <item name="opened" xsi:type="boolean">false</item>
                </item>
            </argument>
            <settings>
                <wrapper>
                    <canShow>true</canShow>
                    <componentType>fieldset</componentType>
                </wrapper>
            </settings>
            <block name="gallery" class="Lof\CategoryBannerSlider\Block\Adminhtml\CategoryBanner\Helper\Form\Gallery">
                    <block class="Lof\CategoryBannerSlider\Block\Adminhtml\CategoryBanner\Helper\Form\Gallery\Content" as="content">
                    <arguments>
                        <argument name="config" xsi:type="array">
                            <item name="parentComponent" xsi:type="string">lof_categorybannerslider_categorybanner_form.lof_categorybannerslider_categorybanner_form.block_gallery.block_gallery</item>
                        </argument>
                    </arguments>
                </block>
            </block>
        </htmlContent>
        <!-- End Fieldset images -->
        <!-- Fieldset Attach With Categories -->
        <fieldset name="attach_categories">
            <settings>
                <collapsible>true</collapsible>
                <label translate="true">Attach With Categories</label>
            </settings>
            <field name="category_id" component="Lof_CategoryBannerSlider/js/select-category" sortOrder="20"
                   formElement="select">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="filterOptions" xsi:type="boolean">true</item>
                        <item name="source" xsi:type="string">banner</item>
                        <item name="multiple" xsi:type="boolean">true</item>
                        <item name="showCheckbox" xsi:type="boolean">true</item>
                        <item name="disableLabel" xsi:type="boolean">true</item>
                        <item name="levelsVisibility" xsi:type="number">1</item>
                    </item>
                </argument>
                <settings>
                    <required>true</required>
                    <validation>
                        <rule name="required-entry" xsi:type="boolean">true</rule>
                    </validation>
                    <dataType>int</dataType>
                    <elementTmpl>ui/grid/filters/elements/ui-select</elementTmpl>
                    <label translate="true">Select Category</label>
                    <dataScope>category_id</dataScope>
                    <componentType>field</componentType>
                    <listens>
                        <link name="${ $.namespace }.${ $.namespace }:responseData">setParsed</link>
                    </listens>
                </settings>
                <formElements>
                    <select>
                        <settings>
                            <options
                                    class="Lof\CategoryBannerSlider\Ui\Component\CategoryBanner\Form\Categories\Options"/>
                        </settings>
                    </select>
                </formElements>
            </field>
        </fieldset>
        <!-- End Fieldset Attach With Categories -->
    </fieldset>
</form>

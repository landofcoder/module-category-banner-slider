<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">
                lof_categorybannerslider_categorybanner_form.categorybanner_form_data_source
            </item>
        </item>
        <item name="label" translate="true" xsi:type="string">Banner Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button class="Lof\CategoryBannerSlider\Block\Adminhtml\CategoryBanner\Edit\BackButton" name="back"/>
            <button class="Lof\CategoryBannerSlider\Block\Adminhtml\CategoryBanner\Edit\DeleteButton" name="delete"/>
            <button class="Lof\CategoryBannerSlider\Block\Adminhtml\CategoryBanner\Edit\SaveButton" name="save"/>
            <button class="Lof\CategoryBannerSlider\Block\Adminhtml\CategoryBanner\Edit\SaveAndContinueButton"
                    name="save_and_continue"/>
        </buttons>
        <namespace>lof_categorybannerslider_categorybanner_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>lof_categorybannerslider_categorybanner_form.categorybanner_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="categorybanner_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Lof\CategoryBannerSlider\Model\CategoryBanner\DataProvider"
                      name="categorybanner_form_data_source">
            <settings>
                <requestFieldName>banner_id</requestFieldName>
                <primaryFieldName>banner_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label>Banner Information</label>
        </settings>
        <field formElement="input" name="title" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">CategoryBanner</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Banner Title</label>
                <dataScope>title</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field formElement="input" name="priority" sortOrder="20">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">CategoryBanner</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Priority</label>
                <dataScope>priority</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">false</rule>
                </validation>
            </settings>
        </field>
        <field name="storeviews" formElement="multiselect" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">banner</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Store View</label>
                <dataScope>store_id</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Lof\CategoryBannerSlider\Ui\Component\Listing\Column\CategoryBanner\StoreViewOptions"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="select_example" formElement="select" sortOrder="40">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Banner Position</label>
                <dataScope>select_example</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">1</item>
                                <item name="label" xsi:type="string">Between Products</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">2</item>
                                <item name="label" xsi:type="string">On Top</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">3</item>
                                <item name="label" xsi:type="string">On Bottom</item>
                            </option>
                        </options>
                        <caption translate="true">-- Please Select --</caption>
                    </settings>
                </select>
            </formElements>
        </field>
        <textarea name="description">
            <settings>
                <cols>15</cols>
                <rows>5</rows>
                <label translate="true">Description</label>
                <dataScope>description</dataScope>
            </settings>
        </textarea>
        <field name="enable" formElement="checkbox">
            <settings>
                <label translate="true">Enabled</label>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <prefer>toggle</prefer>
                        <valueMap>
                            <map name="false" xsi:type="boolean">false</map>
                            <map name="true" xsi:type="boolean">true</map>
                        </valueMap>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <!-- Fieldset General Slider Settings-->
        <fieldset name="general_slider_settings">
            <settings>
                <collapsible>true</collapsible>
                <label translate="true">General Slider Settings</label>
            </settings>
            <field name="my_field">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">My Field</item>
                        <item name="visible" xsi:type="boolean">true</item>
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="formElement" xsi:type="string">input</item>
                    </item>
                </argument>
            </field>
        </fieldset>
        <!-- Fieldset Customer -->
        <fieldset name="customer_group">
            <settings>
                <collapsible>true</collapsible>
                <label translate="true">Customer Group</label>
            </settings>
            <field name="customer_group" formElement="multiselect">
                <settings>
                    <dataType>text</dataType>
                    <label translate="true">Enable Customer Groups</label>
                    <dataScope>customer_group_id</dataScope>
                </settings>
                <formElements>
                    <multiselect>
                        <settings>
                            <options class="Lof\CategoryBannerSlider\Ui\Component\Listing\Column\CategoryBanner\CustomerGroup" />
                        </settings>
                    </multiselect>
                </formElements>
            </field>
        </fieldset>
        <!-- Fieldset images -->
        <fieldset name="images">
            <settings>
                <collapsible>true</collapsible>
                <label translate="true">Images</label>
            </settings>
            <field name="images">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">string</item>
                        <item name="source" xsi:type="string">CategoryBanner</item>
                        <item name="label" xsi:type="string" translate="true">Image</item>
                        <item name="visible" xsi:type="boolean">true</item>
                        <item name="formElement" xsi:type="string">imageUploader</item>
                        <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                        <item name="required" xsi:type="boolean">false</item>
                        <item name="sortOrder" xsi:type="number">40</item>
                        <item name="uploaderConfig" xsi:type="array">
                            <item name="url" xsi:type="url" path="lof_categorybannerslider/categorybanner/upload"/>
                        </item>
                    </item>
                </argument>
            </field>
        </fieldset>
        <!-- Fieldset Attach With Categories -->
        <fieldset name="attach_categories">
            <settings>
                <collapsible>true</collapsible>
                <label translate="true">Attach With Categories</label>
            </settings>
            <field name="my_field">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="label" xsi:type="string" translate="true">My Field</item>
                        <item name="visible" xsi:type="boolean">true</item>
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="formElement" xsi:type="string">input</item>
                    </item>
                </argument>
            </field>
        </fieldset>
    </fieldset>
</form>
